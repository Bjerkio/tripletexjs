{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES5",
    "lib": ["es6", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}